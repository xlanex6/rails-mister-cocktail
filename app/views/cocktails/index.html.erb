
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= @home_page%>);">
  <div class="banner-content">
    <h1>Cocktail Party Time</h1>
    <p>All recipes for you</p>
  </div>
</div>
<div class="container">
  <%= @home_page%>
  <ul class="list-unstyled">
  <% @cocktails.each do |c|%>
  <li><%= c.name%> - <%= link_to 'details', cocktail_path(c) %></li>
  <% end %>
  </ul>
</div>
